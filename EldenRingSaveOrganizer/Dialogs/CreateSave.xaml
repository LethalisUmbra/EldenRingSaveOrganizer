<Window x:Class="EldenRingSaveOrganizer.Dialogs.CreateSave"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EldenRingSaveOrganizer.Dialogs"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Closed="Window_Closed"
        Title="Create Save" Height="150" Width="200">
    <Grid>
        <Label Content="Save Name:" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top"/>
        <TextBox x:Name="txSaveName" Margin="10,40,10,0" VerticalAlignment="Top" TextChanged="txSaveName_TextChanged"/>
        <Button x:Name="btnCreate" Content="Create" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="50" Click="btnCreate_Click" IsDefault="True"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="70,70,0,0" VerticalAlignment="Top" Width="50" Click="btnCancel_Click" IsCancel="True"/>
    </Grid>
</Window>
